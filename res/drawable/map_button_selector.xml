<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" android:drawable="@color/shoutBlue">
        <layer-list>
            <item>
                <shape xmlns:android="http://schemas.android.com/apk/res/android"
                       android:shape="oval">
                    <solid android:color="@color/semiTransparentWhite"/>
                    <stroke android:width="1sp" android:color="@color/lightGrey" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_enabled="true">
        <layer-list>
            <item>
                <shape xmlns:android="http://schemas.android.com/apk/res/android"
                       android:shape="oval">
                    <solid android:color="@color/semiTransparentWhite"/>
                    <stroke android:width="1sp" android:color="@color/lightGrey" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>