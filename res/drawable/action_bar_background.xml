<?xml version="1.0" encoding="utf-8"?>



<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" android:drawable="@color/shoutBlue">
        <layer-list>
            <item>
                <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
                    <gradient android:startColor="@color/black" android:endColor="@color/blackLighter" android:angle="90" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_enabled="true">
        <layer-list>
            <item>
                <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
                    <gradient android:startColor="@color/black" android:endColor="@color/blackLighter" android:angle="90" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>