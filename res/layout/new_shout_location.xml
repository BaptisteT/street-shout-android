<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/darkGrey">

    <TextView android:text="@string/create_shout_map_instruction"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="10dp"
              android:layout_marginTop="10dp"
              android:textSize="18dp"/>

    <com.streetshout.android.utils.SquareLayout android:id="@+id/refine_location_map_fragment_container"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:layout_weight="1"
                 android:layout_margin="30dp"
                 android:layout_gravity="center">

        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                  android:id="@+id/shout_map"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  class="com.google.android.gms.maps.MapFragment" />

        <ImageView
                android:id="@+id/refresh_shout_perimeter"
                android:layout_width="@dimen/map_button_size"
                android:layout_height="@dimen/map_button_size"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/map_button_selector"
                android:src="@drawable/refresh_icon"
                android:padding="6dp"/>

     </com.streetshout.android.utils.SquareLayout>



    <TextView android:text="@string/create_shout_address_instruction"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="10dp"
              android:layout_marginLeft="10dp"
              android:textSize="18dp"/>

    <EditText android:id="@+id/shout_address_view"
              android:inputType="textPostalAddress"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="30dp"
              android:layout_marginRight="30dp"
              android:layout_marginBottom="20dp"
              android:imeOptions="actionSearch"
              android:hint="@string/new_shout_location_address_hint"
              android:textSize="16dp"/>

    <Button android:id="@+id/refine_location_button"
            android:layout_height="60dp"
            android:layout_width="match_parent"
            android:text="@string/done"
            android:textColor="@color/shoutBlue"
            android:background="@drawable/rounded_button"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:onClick="createNewShoutFromInfo"/>
</LinearLayout>