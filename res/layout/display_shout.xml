<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white">

    <LinearLayout android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="@dimen/action_bar_heigh"
                  android:background="@color/white">

        <TextView android:id="@+id/display_shout_username_textView"
                  android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:layout_marginLeft="10dp"
                  android:maxLines="1"
                  android:fontFamily="sans-serif"
                  android:textSize="18dp"
                  android:textStyle="bold"
                  android:textColor="@color/shoutBlue"
                  android:gravity="center_vertical"/>

        <View android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_weight="1"/>

        <ImageView android:layout_width="15dp"
                   android:layout_height="15dp"
                   android:layout_marginRight="5dp"
                   android:layout_gravity="center_vertical"
                   android:src="@drawable/shout_time_icon"/>

        <TextView android:id="@+id/display_shout_stamp_textView"
                  android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:maxLines="1"
                  android:layout_marginRight="5dp"
                  android:fontFamily="sans-serif-light"
                  android:textSize="18dp"
                  android:textColor="@color/lightGrey"
                  android:gravity="center_vertical"/>

        <ImageView android:layout_width="15dp"
                   android:layout_height="15dp"
                   android:layout_gravity="center_vertical"
                   android:layout_marginRight="10dp"
                   android:src="@drawable/shout_distance_icon"/>
    </LinearLayout>
    

    <ScrollView android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

        <LinearLayout android:orientation="vertical"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:background="@color/white">

            <com.streetshout.android.custom.SquareRelativeLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent">

                <com.streetshout.android.custom.SquareImageView android:id="@+id/display_shout_image_view_place_holder"
                                                                android:layout_height="match_parent"
                                                                android:layout_width="match_parent"
                                                                android:background="@drawable/shout_image_place_holder_square"/>

                <com.streetshout.android.custom.SquareImageView
                        android:id="@+id/display_shout_image_view"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"/>

                <TextView android:id="@+id/display_shout_description_textView"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_margin="10dp"
                          android:paddingLeft="5dp"
                          android:paddingRight="5dp"
                          android:fontFamily="sans-serif-light"
                          android:textSize="25dp"
                          android:textColor="@color/white"
                          android:background="@color/semiTransparentBlack"
                          android:gravity="center"
                          android:layout_alignParentTop="true"
                          android:layout_centerHorizontal="true"/>
            </com.streetshout.android.custom.SquareRelativeLayout>

            <LinearLayout android:orientation="horizontal"
                          android:layout_width="match_parent"
                          android:layout_height="@dimen/action_bar_heigh"
                          android:background="@color/white">

                <ImageView android:layout_width="30dp"
                           android:layout_height="30dp"
                           android:layout_gravity="center_vertical"
                           android:layout_marginLeft="10dp"
                           android:src="@drawable/shout_like_icon"/>

                <TextView android:id="@+id/display_shout_like_count_textView"
                          android:layout_width="wrap_content"
                          android:layout_height="match_parent"
                          android:maxLines="1"
                          android:fontFamily="sans-serif-light"
                          android:textSize="18dp"
                          android:textColor="@color/shoutBlue"
                          android:gravity="center_vertical"
                          android:visibility="gone"/>

                <View android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:layout_weight="1"/>

                <TextView android:id="@+id/display_shout_comment_count_textView"
                          android:layout_width="wrap_content"
                          android:layout_height="match_parent"
                          android:maxLines="1"
                          android:fontFamily="sans-serif-light"
                          android:textSize="18dp"
                          android:textColor="@color/shoutBlue"
                          android:gravity="center_vertical"
                          android:visibility="gone"/>

                <ImageView android:layout_width="30dp"
                           android:layout_height="30dp"
                           android:layout_gravity="center_vertical"
                           android:layout_marginRight="10dp"
                           android:src="@drawable/shout_comment_icon"/>
            </LinearLayout>

            <RelativeLayout android:layout_height="@dimen/display_shout_map_height"
                            android:layout_width="match_parent"
                            android:layout_margin="10dp">

                <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                          android:id="@+id/display_shout_map"
                          android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          class="com.google.android.gms.maps.MapFragment" />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

    <LinearLayout android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="@dimen/action_bar_heigh"
                  android:background="@color/shoutBlue">

        <ImageView android:id="@+id/shout_like_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/shout_bar_like_icon"
                android:background="@android:color/transparent"
                android:gravity="center"/>
        <View android:layout_height="30dp"
              android:layout_width="1dp"
              android:background="@color/white"
              android:layout_gravity="center_vertical"/>

        <ImageView android:id="@+id/shout_comment_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/shout_bar_comment_icon"
                android:background="@android:color/transparent"
                android:gravity="center"/>

        <View android:layout_height="30dp"
              android:layout_width="1dp"
              android:background="@color/white"
              android:layout_gravity="center_vertical"/>

        <ImageView android:id="@+id/shout_share_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/shout_bar_share_icon"
                android:background="@android:color/transparent"
                android:gravity="center"/>

        <View android:layout_height="30dp"
              android:layout_width="1dp"
              android:background="@color/white"
              android:layout_gravity="center_vertical"/>

        <ImageView android:id="@+id/shout_more_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/shout_bar_more_icon"
                android:background="@android:color/transparent"
                android:gravity="center"/>
    </LinearLayout>

</LinearLayout>