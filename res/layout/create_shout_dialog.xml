<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <EditText android:id="@+id/create_shout_descr_dialog_name"
              android:inputType="textPersonName"
              android:imeOptions="actionSend"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="16dp"
              android:layout_marginLeft="4dp"
              android:layout_marginRight="4dp"
              android:layout_marginBottom="4dp"
              android:hint="@string/create_shout_dialog_name" />

    <EditText android:id="@+id/create_shout_descr_dialog_descr"
              android:inputType="textCapSentences"
              android:imeOptions="actionSend"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="4dp"
              android:layout_marginRight="4dp"
              android:layout_marginBottom="4dp"
              android:hint="@string/create_shout_dialog" />

    <TextView android:id="@+id/create_shout_descr_dialog_count"
              android:text="@string/create_shout_dialog_count"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="4dp"
              android:gravity="right"
              android:layout_marginRight="10dp"/>

</LinearLayout>