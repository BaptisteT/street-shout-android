<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <fragment android:name="com.streetshout.android.Fragments.ShoutFragment"
              android:id="@+id/shout_fragment"
              android:layout_weight="1"
              android:layout_width="match_parent"
              android:layout_height="match_parent" />

    <fragment android:name="com.streetshout.android.Fragments.FeedFragment"
              android:id="@+id/feed_fragment"
              android:layout_weight="1.2"
              android:layout_width="match_parent"
              android:layout_height="match_parent" />

    <fragment android:name="com.streetshout.android.Fragments.BarFragment"
              android:id="@+id/bar_fragment"
              android:layout_width="match_parent"
              android:layout_height="@dimen/action_bar_heigh" />

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/map"
              android:layout_weight="0.8"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              class="com.google.android.gms.maps.MapFragment" />
</LinearLayout>