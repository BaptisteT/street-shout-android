<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/blue_highlight_button_selector">

    <LinearLayout android:id="@+id/feed_shout_view_left_container"
                  android:orientation="vertical"
                  android:layout_width="@dimen/feed_shout_view_height"
                  android:layout_height="@dimen/feed_shout_view_height">

        <LinearLayout android:id="@+id/feed_shout_age_container"
                      android:orientation="vertical"
                      android:layout_width="@dimen/feed_shout_view_height"
                      android:layout_height="@dimen/feed_shout_age_container"
                      android:background="@color/shoutBlue">

            <TextView
                    android:id="@+id/feed_shout_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="30dp"
                    android:text="25"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"/>

            <TextView
                    android:id="@+id/feed_shout_age_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="12dp"
                    android:text="minutes"
                    android:layout_gravity="center"
                    android:layout_marginTop="-6dp"/>

        </LinearLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/white"/>

    </LinearLayout>

    <LinearLayout android:id="@+id/feed_shout_view_linear_layout"
                  android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="@dimen/feed_shout_view_height"
                  android:layout_weight="1">

        <TextView
                android:id="@+id/feed_shout_item_body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:maxLines="1"/>

        <TextView
                android:id="@+id/feed_shout_item_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="10dp"
                android:textStyle="italic"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:maxLines="1"/>

    </LinearLayout>

    <RelativeLayout android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical">

        <ImageView android:id="@+id/feed_shout_image_place_holder"
                   android:layout_width="@dimen/feed_shout_image_height"
                   android:layout_height="@dimen/feed_shout_image_height"
                   android:src="@drawable/shout_image_place_holder_circle"
                   android:layout_gravity="center"
                   android:visibility="gone"/>


        <com.streetshout.android.custom.CircleImageView android:id="@+id/feed_shout_image"
                                                        android:layout_width="@dimen/feed_shout_image_height"
                                                        android:layout_height="@dimen/feed_shout_image_height"
                                                        android:layout_gravity="center"
                                                        android:visibility="gone"/>

    </RelativeLayout>


</LinearLayout>