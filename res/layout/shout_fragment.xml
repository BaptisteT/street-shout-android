<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/shout_fragment_container"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal"
              android:background="@color/white">

    <LinearLayout android:id="@+id/shout_container"
                  android:layout_height="fill_parent"
                  android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:layout_weight="1">

        <LinearLayout android:layout_height="wrap_content"
                      android:layout_width="match_parent"
                      android:orientation="horizontal"
                      android:layout_marginTop="5dp"
                      android:layout_marginLeft="@dimen/shout_fragment_button_margin"
                      android:layout_marginRight="@dimen/shout_fragment_button_margin">

            <ImageView
                    android:id="@+id/shout_fragment_back_button"
                    android:layout_width="@dimen/shout_fragment_button_size"
                    android:layout_height="@dimen/shout_fragment_button_size"
                    android:layout_gravity="center"
                    android:src="@drawable/button_shout_fragment_back_selector"/>

            <View android:layout_height="match_parent"
                  android:layout_width="match_parent"
                  android:layout_weight="1"/>


            <RelativeLayout android:layout_height="wrap_content"
                            android:layout_width="wrap_content">

                <ImageView android:id="@+id/shout_fragment_image_place_holder"
                           android:layout_width="@dimen/shout_fragment_image_height"
                           android:layout_height="@dimen/shout_fragment_image_height"
                           android:src="@drawable/shout_image_place_holder_circle"
                           android:visibility="gone"/>

                <com.streetshout.android.custom.CircleImageView
                        android:id="@+id/shout_fragment_image"
                        android:layout_width="@dimen/shout_fragment_image_height"
                        android:layout_height="@dimen/shout_fragment_image_height"
                        android:visibility="gone"/>

            </RelativeLayout>

            <View android:layout_height="match_parent"
                  android:layout_width="match_parent"
                  android:layout_weight="1"/>

            <ImageView
                    android:id="@+id/shout_fragment_zoom_button"
                    android:layout_width="@dimen/shout_fragment_button_size"
                    android:layout_height="@dimen/shout_fragment_button_size"
                    android:layout_gravity="center"
                    android:src="@drawable/button_shout_fragment_zoom_selector"/>

        </LinearLayout>

        <LinearLayout android:layout_height="match_parent"
                      android:layout_width="match_parent"
                      android:layout_weight="1"
                      android:gravity="center"
                      android:orientation="vertical">

            <TextView
                    android:id="@+id/shout_body"
                    android:textSize="16dp"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>

            <TextView
                    android:id="@+id/shout_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:textSize="12dp"
                    android:textStyle="italic"
                    android:textColor="@color/white"
                    android:gravity="center_horizontal"/>

        </LinearLayout>

        <LinearLayout android:layout_height="wrap_content"
                      android:layout_width="match_parent"
                      android:orientation="horizontal">

            <LinearLayout android:layout_height="wrap_content"
                          android:layout_width="@dimen/shout_fragment_numeric_info_layout_width"
                          android:orientation="vertical">

                <TextView
                        android:id="@+id/shout_fragment_shout_age"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="40dp"
                        android:textColor="@color/white"
                        android:text="55"
                        android:gravity="center_horizontal"/>

                <TextView
                        android:id="@+id/shout_fragment_shout_age_unit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:textColor="@color/white"
                        android:text="minutes ago"
                        android:layout_marginTop="-10dp"
                        android:layout_marginBottom="5dp"
                        android:gravity="center_horizontal"/>
            </LinearLayout>

            <View android:layout_height="match_parent"
                  android:layout_width="match_parent"
                  android:layout_weight="1"/>

            <LinearLayout android:layout_height="wrap_content"
                          android:layout_width="@dimen/shout_fragment_numeric_info_layout_width"
                          android:orientation="vertical">
                <TextView
                        android:id="@+id/shout_fragment_shout_distance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="40dp"
                        android:textColor="@color/white"
                        android:text="33"
                        android:gravity="center_horizontal"/>

                <TextView
                        android:id="@+id/shout_fragment_shout_age_distance_unit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:textColor="@color/white"
                        android:text="miles away"
                        android:layout_marginTop="-10dp"
                        android:layout_marginBottom="5dp"
                        android:gravity="center_horizontal"/>
            </LinearLayout>

        </LinearLayout>

        <!--<TextView-->
                <!--android:id="@+id/shout_stamp"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:textSize="14dp"-->
                <!--android:gravity="bottom|right"-->
                <!--android:layout_marginTop="15dp"-->
                <!--android:layout_marginRight="10dp"-->
                <!--android:layout_marginBottom="30dp"/>-->

    </LinearLayout>

</LinearLayout>