        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:actionBarStyle">@style/ShoutStyle.ActionBar</item>
    </style>

    <style name="ShoutStyle.ActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@color/actionBarGrey</item>
        <item name="android:displayOptions"></item>
